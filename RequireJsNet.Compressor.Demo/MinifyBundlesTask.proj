<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<UsingTask TaskName="JavaScriptCompressorTask" AssemblyFile="bin\RequireJsNet.Compressor.dll" />
	<Target Name="Minify" AfterTargets="AfterBuild">
		<ItemGroup>
			<MinItems Include="Scripts\jquery-1.10.2.js"/>
			<MinItems Include="Scripts\bootstrap.js"/>
		</ItemGroup>
		<JavaScriptCompressorTask LoggingType="Debug" EncodingType="UTF8" SourceFiles="@(MinItems)" OutputFile="Scripts\main.min.js" />
	</Target>
</Project>